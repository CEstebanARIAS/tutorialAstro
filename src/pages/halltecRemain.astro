---
import Layout from "../layouts/Layout.astro";
import Navegation from "../components/navegation.astro";
---
<html>
    <head>
        <meta charset="UTF-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.avif" />
    </head>
    <body>
        <div class="contenedor"></div>
        <nav>
            <div class="Logo">
                <a href="/proyect"><img src="/halltecLogo.avif" alt="Logo no Original de Halltec" /></a>
            </div>
            <ul>
                <li><a href="">Inicio</a></li>
                <li><a href="">Servicios</a></li>
                <li><a href="">Blog</a></li>
                <li><a href="">Nosotros</a></li>
                <li><a href="">Contacto</a></li>
            </ul>
        </nav>
        <section class="info-formulario">
            <div class="info">
                <h1 class="titleFirst">Centro Tecnologico</h1>
                <p class="services">
                    Diseño Web| Diseño Grafico| Aplicaciones Moviles| Coworking| Asesorias
                </p>
            </div>
            <div class="formulario">
                <h1>Contáctanos</h1>
                <input class="inputs" type="text" name="nombre" id="nombre" placeholder="ingrese su nombre">
                <input class="inputs" type="email" name="email" id="email" placeholder="ingrese su correo electronico">
                <input class="inputs" type="number" name="telefono" id="telefono" placeholder="ingrese su numero de contacto">
                <input class="botons" type="submit" value="Contactar">
            </div>
        </section>
    </body>
</html>



