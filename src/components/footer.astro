---
const platform = "github";
const username = "withastro";
import Social from "./social.astro";
---

<footer>
  <div class="footer">
    <div class="links">
      <Social platform="linkedin" username="in/carlosariasdev" />
      <Social platform="github" username="CEstebanARIAS" />
      <Social platform="instagram" username="esteban_.ac" />
    </div>
    <div class="morInfo">
      <p>
       Todos los derechos reservados
      </p>
    </div>
  </div>
</footer>




<style>
  .footer{
    border-top: solid 1px;
    margin-top: 2rem;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    font-size: 1rem;
  }
  
  .links{
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    align-items: top;
  }
  p{
    display: flex;
    margin-top: 0;
    justify-content: end;
    font-size: small;
    color: rgba(181, 181, 181, 0.27);
  }
  a:hover {
    color: gray;
  }
  @media screen and (max-width: 512px) {
    .links{
      font-size: small;
    }
  }
  
</style>
